{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["candidate", "recruiter"],
          "description": "The user's role in the application."
        },
        "avatarUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL for the user's avatar image."
        }
      },
      "required": ["name", "email", "role"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information, keyed by user ID."
    }
  }
}
